# frozen_string_literal: true

source "https://rubygems.org"

# gem "rails"
gem "tzinfo"
gem "tzinfo-data" # 仅在 Windows 或部分系统需要
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw]
gem "jekyll", "~> 4.4"

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  # 其他插件如 jekyll-sitemap 等也需在此列出
end

# 开启代码：bundle exec jekyll serve